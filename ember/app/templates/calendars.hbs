<h3 id="date">Triage calendar for {{dateString}}</h3>

  <div class="btn-toolbar" role="toolbar">
    <div class="btn-group">
      <button {{action setDepartmentFilter "all"}} type="button" class="btn btn-default">All</button>
    </div>
    <div class="btn-group">
      <button {{action setDepartmentFilter "F201"}} type="button" class="btn btn-default">F201</button>
      <button {{action setDepartmentFilter "F301"}} type="button" class="btn btn-default">F301</button>
      <button {{action setDepartmentFilter "F401"}} type="button" class="btn btn-default">F401</button>
      <button {{action setDepartmentFilter "F402"}} type="button" class="btn btn-default">F402</button>
    </div>
    <div class="btn-group">
      <button {{action setStationFilter "DCSS"}} type="button" class="btn btn-default">DCSS</button>
      <button {{action setStationFilter "CCRC"}} type="button" class="btn btn-default">CCRC</button>
      <button {{action setStationFilter "Self-help"}} type="button" class="btn btn-default">Self-help</button>
    </div>
  </div>
  {{!--
    {{#each filtered}}
  --}}
  {{#each matters}}
  {{render 'matter' this}}
  {{else}}
  <h3>No cases</h3>
  {{/each}}
